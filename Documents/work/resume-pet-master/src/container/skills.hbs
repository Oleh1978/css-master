<div>
    {{#with main}}
     <main>
        <section>
          {{>title data="All skilss" big=true}}
          <ul>
            {{#each skills}}
              <li>
                {{name}}
                {{#if point includeZero=true}}({{point}}){{/if}}
                 {{#if isTop}}(top){{/if}}
                 {{#unless point includeZero=true}}(не вичаємо)
                 {{/unless}}
                  {{#unless point}}
                  {{#if point includeZero=true}}(зараз вичаємо){{/if}}
                  {{/unless}}
              </li>
            {{/each}}  
          </ul>
        </section>
        <section>
          <h2>My hobbies:</h2>
          <ol>
            {{#each hobbies}}
            <li>{{name}}
              {{#if isMain}}(favourite){{/if}}
            </li>
            {{/each}}
          </ol>
        </section>
     </main>
    {{/with}}
</div>


